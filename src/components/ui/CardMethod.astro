---
import { Badge } from "./badge";

interface Props {
  title: string;
  mutation: string;
}

const { title, mutation } = Astro.props;
---

<div class="mb-20">
  <div class="mb-4 flex items-center justify-between">
    <h2 class="text-2xl font-semibold md:text-3xl">
      .{title}
    </h2>
    {
      mutation === "no mutation" ? (
        <Badge>{mutation}</Badge>
      ) : (
        <Badge variant="destructive">{mutation}</Badge>
      )
    }
  </div>
  <div
    class="prose max-w-none space-y-4 text-foreground prose-h3:text-xl prose-h3:font-medium prose-h3:text-foreground prose-p:overflow-auto prose-p:text-foreground prose-a:text-primary prose-a:underline prose-pre:p-4 lg:prose-h3:text-2xl"
  >
    <slot />
  </div>
</div>
